    <script>
        function slide() {
            setInterval(function() {
                slider()
            }, 2000);
        }
        current_slide = 0;

        function slider() {
            if (current_slide > 7) {
                current_slide = 0
            }
            current_slide_id = slisli.children[current_slide].id;
            current_slide_obj = document.getElementById(current_slide_id);

            next_slide = (current_slide > 6) ? (0) : (current_slide + 1);
            next_slide_id = slisli.children[next_slide].id;
            next_slide_obj = document.getElementById(next_slide_id);

            var count = 0;
            var timer = setInterval(function() {
                //эта херня делает последний кадр плавным, но портит картинку в целом
                console.log()
                current_slide_obj.style.opacity = (current_slide_obj.style.opacity - (count / 50));

                next_slide_obj.style.opacity = count;
                count += 0.01;

                if (count > 1) {
                    clearInterval(timer);
                    current_slide_obj.style.opacity = 0;
                }
            }, 8)
            current_slide++;

        }

        slide();
    </script>

